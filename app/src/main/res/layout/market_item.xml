<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:paddingHorizontal="10dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/market_item_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
    
    <TextView
        style="@style/CoinBitText.Body1"
        android:id="@+id/coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/market_item_img"
        android:text="BTC"
        android:layout_marginStart="15dp"/>

        <TextView
        android:id="@+id/taghir"
        style="@style/CoinBitText.Body1Alternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/coin_name"
        app:layout_constraintStart_toStartOf="@id/coin_name"
        android:text="CoinBase"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/coin_price"
        style="@style/CoinBitText.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/coin_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="$3.185"/>

    <TextView
        android:id="@+id/market_cap"
        style="@style/CoinBitText.Body1Alternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/taghir"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="$2.4 million"/>


</androidx.constraintlayout.widget.ConstraintLayout>